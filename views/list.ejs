<%- include('./partials/header.ejs') %>

  <div class="container">

    <h3>BREAD (Browse,Read,Edit,Add,Delete)</h3>

    <h4>Filters</h4>

  </div>

  <div class="container">

    <form class="form-horizontal">
      <div class="form-group form-group-sm">
        <label class="col-sm-2">
          <input type="checkbox" for="id" name="id"> ID
        </label>
        <div class="col-sm-10">
          <input type="integer" class="form-control" name="id" placeholder="ID">
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2">
          <input type="checkbox" name="stringc"> String
        </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="string" placeholder="String" value="<%= query.string %>">
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2">
          <input type="checkbox" name="integerc"> Integer
        </label>
        <div class="col-sm-10">
          <input type="integer" class="form-control" name="integer" placeholder="Integer" value="<%= query.integer %>">
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2">
          <input type="checkbox" name="floatc"> Float
        </label>
        <div class="col-sm-10">
          <input type="real" class="form-control" name="float" placeholder="Float" value="<%= query.float %>">
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2">
          <input type="checkbox" name="datenc"> Date
        </label>
        <div class="col-sm-10">
          <input type="date" class="form-control" name="dates" placeholder="Start date">
          <label for="">to</label><br>
          <input type="date" class="form-control" name="daten" placeholder="End date" value="<%= query.daten %>">
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2">
          <input type="checkbox" name="booleanc"> Boolean
        </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="boolean" placeholder="Boolean" value="<%= query.boolean %>">
        </div>
      </div>
      <div>
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="/" class="btn btn-warning">Reset</a>
      </div>
    </form>

  </div>

  <div class="container">

    <form method="post">
      <table class="table table-striped" style="text-align: center;">
        <thead>
          <tr>
            <th>ID</th>
            <th>String</th>
            <th>Integer</th>
            <th>Float</th>
            <th>Date</th>
            <th>Boolean</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% daftar.forEach((item)=>{ %>
            <tr>
              <td>
                <%= item.id + offset %>
              </td>
              <td>
                <%= item.string %>
              </td>
              <td>
                <%= item.integer %>
              </td>
              <td>
                <%= item.float %>
              </td>
              <td>
                <%= moment(item.daten).format('DD MMMM YYYY') %>
              </td>
              <td>
                <%= item.boolean %>
              </td>
              <td>
                <a href="/edit/<%= item.id %>" class="btn btn-success">Edit</a>
                <a href="/delete/<%= item.id %>" type="submit" class="btn btn-danger">Delete</a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>

      <div class="col-md-10" style="position: flex; text-align: center;">
        <nav>
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            <% for(let i=1; i <=pages; i++){ %>
              <li class="page-item"><a class="page-link" href="/?page=<%= i %>">
                  <%= i %>
                </a></li>
              <% } %>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
          </ul>
        </nav>
      </div>

      <div class="col-md-2" style="position: flex; text-align: end; padding-top: 5mm;">
        <a href="/add" class="btn btn-info">Add</a>
      </div>

    </form>

  </div>

  <%- include('./partials/footer.ejs') %>